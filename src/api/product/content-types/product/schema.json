{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "altName": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "photo": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "features": {
      "type": "richtext",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "THB",
        "USD"
      ],
      "default": "THB",
      "required": true
    },
    "price": {
      "type": "float"
    }
  }
}
